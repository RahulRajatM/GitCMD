package Patterns;

public class RightTriangle3 {

	public static void main(String[] args) {

		//		op:   *
		//		     **
		//		    ***
		//		   ****
		for (int i = 0; i<4; i++) {

			for (int j = 3; j <i; j--) {

				System.out.print("");

				for (int k = 0; k ==i ; k++) {
					System.out.println("*");
				}

			}
			System.out.println();

		}
	}
}
