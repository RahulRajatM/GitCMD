package Patterns;

public class RightTriangle3 {

	public static void main(String[] args) {

		//		op:   *
		//		     **
		//		    ***
		//		   ****
		for (int i = 0; i<4; i++) {

			for (int j = 0; j<=i; j++) {

				for (int k = 3; k>i ; k--) {
					System.out.println("");
				}
				System.out.print("*");
			}
			System.out.println();

		}
	}
}
