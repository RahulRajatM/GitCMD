package Patterns;

public class RightTriangle3 {

	public static void main(String[] args) {

		//		op:   *
		//		     **
		//		    ***
		//		   ****
		for (int i = 1; i<=4; i++) {
			System.out.println();
			for (int j = 4; j>i; j--) {

				System.out.print("");
			}
			for (int k = 1; k<=i ; k++) {
				System.out.print("*");
			}
			System.out.println("");

		}
	}
}
