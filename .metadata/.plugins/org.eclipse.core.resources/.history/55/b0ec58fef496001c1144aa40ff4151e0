package Patterns;

public class RightTriangle3 {

	public static void main(String[] args) {

		//		op:   *
		//		     **
		//		    ***
		//		   ****
		for (int i = 4; i>=1; i--) {
			System.out.println();
			for (int j = 1; j<i; j++) {

				System.out.print("");
			}
			System.out.print("*");

		}
	}
}
